@model List<Movie>
<h1 class="text-center">Modeldeki kayıt sayısı: @Model.Count</h1>
@if (Model.Count == 0) {
    <div class="alert alert-warning text-center" role="alert">
        Bu kategoride hiç film bulunmuyor
    </div>
}
@foreach (Movie movie in Model)
{
    <div class="d-flex justify-content-center">
        @await Html.PartialAsync("_movie",movie)
    </div>
}

@section stylesheets {
    <link rel="stylesheet" href="~/css/MovieList.css">
}

@section categories {
    @*await Html.PartialAsync("_categories",Model.Genres)*@
    @await Component.InvokeAsync("Genres")
}